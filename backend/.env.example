# ==============================================
# Math Routing Agent - Environment Configuration
# ==============================================

# ==============================================
# API KEYS (REQUIRED)
# ==============================================

# Google Gemini API Key for DSPy and LLM operations
GOOGLE_API_KEY=AIzaSyAEesyJ5kz10ooIG5O3nWXqxiHxmkfDJBI

# Tavily API Key for MCP web search
TAVILY_API_KEY=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

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# Database URL (SQLite for development, PostgreSQL for production)
DATABASE_URL=sqlite+aiosqlite:///./math_agent.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost/math_agent

# ==============================================
# LANCEDB CONFIGURATION
# ==============================================

# Path to LanceDB storage
LANCEDB_PATH=./data/lancedb_math

# LanceDB table name for math Q&A
LANCEDB_TABLE=math_qa

# Vector column name in LanceDB
LANCEDB_VECTOR_COLUMN=embedding

# ==============================================
# KNOWLEDGE BASE CONFIGURATION
# ==============================================

# Similarity threshold for knowledge base search (0.0-1.0)
KB_THRESHOLD=0.75

# Number of top results to return from KB search
KB_TOP_K=5

# Path to knowledge base parquet file
KB_PARQUET_PATH=./knowledge_base.parquet

# ==============================================
# EMBEDDING CONFIGURATION
# ==============================================

# Embedding model for SentenceTransformers
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Expected embedding dimension
EMBEDDING_DIMENSION=384

# ==============================================
# MCP (WEB SEARCH) CONFIGURATION
# ==============================================

# Tavily MCP endpoint URL
MCP_URL=https://mcp.tavily.com/mcp/

# Maximum search results to retrieve
MCP_MAX_RESULTS=5

# Search timeout in seconds
MCP_TIMEOUT=30

# ==============================================
# DSPY CONFIGURATION
# ==============================================

# DSPy model name (Gemini)
DSPY_MODEL=gemini-1.5-flash

# Temperature for LLM generation (0.0-2.0)
DSPY_TEMPERATURE=0.2

# Maximum tokens for LLM responses
DSPY_MAX_TOKENS=1024

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Debug mode (True/False)
DEBUG=False

# Maximum response time for queries (seconds)
MAX_RESPONSE_TIME=30.0

# Cache TTL in seconds (1 hour = 3600)
CACHE_TTL=3600

# ==============================================
# EDUCATIONAL CONTENT CONFIGURATION
# ==============================================

# Default student level for explanations
DEFAULT_STUDENT_LEVEL=intermediate

# Available student levels: beginner,intermediate,advanced

# ==============================================
# GUARDRAILS CONFIGURATION
# ==============================================

# Enable input validation (True/False)
ENABLE_INPUT_VALIDATION=True

# Enable output validation (True/False)
ENABLE_OUTPUT_VALIDATION=True

# Enable content filtering (True/False)
ENABLE_CONTENT_FILTERING=True

# ==============================================
# FEEDBACK CONFIGURATION
# ==============================================

# Enable feedback-based learning (True/False)
ENABLE_FEEDBACK_LEARNING=True

# Minimum rating threshold for positive feedback
FEEDBACK_THRESHOLD=4.0

# ==============================================
# BENCHMARK CONFIGURATION
# ==============================================

# Enable JEE benchmark evaluation (True/False)
JEE_BENCHMARK_ENABLED=True

# ==============================================
# FILE PATHS
# ==============================================

# Base directory for data storage
DATA_DIR=./data

# Directory for log files
LOGS_DIR=./logs

# Directory for benchmark results
BENCHMARK_OUTPUT_DIR=./benchmark_results

# ==============================================
# PERFORMANCE TUNING
# ==============================================

# Number of worker processes for uvicorn
WORKERS=1

# Host to bind the server
HOST=0.0.0.0

# Port to bind the server
PORT=8000

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================

# Enable auto-reload in development
RELOAD=True

# Enable detailed error traces
SHOW_ERROR_DETAILS=True

# ==============================================
# PRODUCTION SETTINGS
# ==============================================

# Enable HTTPS redirect (production only)
FORCE_HTTPS=False

# CORS allowed origins (comma-separated)
CORS_ORIGINS=*

# Enable request logging
LOG_REQUESTS=True

# ==============================================
# ADVANCED CONFIGURATION
# ==============================================

# Custom embedding cache size
EMBEDDING_CACHE_SIZE=1000

# Knowledge base rebuild interval (hours)
KB_REBUILD_INTERVAL=24

# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=100

# Request timeout (seconds)
REQUEST_TIMEOUT=60